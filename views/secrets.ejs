<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    
    <% usersWithSecrets.forEach(function(user) { %>
      <p class="secret-text"><%= user.secret %> </p>
    <% }) %>

    <hr>
    <div class="btn-group">
      <form action="/logout" method="post">
        <button class="btn btn-light btn-lg secret-btn" type="submit">Log Out</button>
      </form>
      <form action="/submit" method="get">
        <button class="btn btn-dark btn-lg secret-btn">Submit a Secret</button>
      </form>
      
    </div>
    
  </div>
</div>

<%- include('partials/footer') %>
